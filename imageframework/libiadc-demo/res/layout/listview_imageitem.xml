<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="5dp"
        >

    <ImageView android:layout_width="fill_parent"
               android:layout_height="250dp"
               android:contentDescription="@string/app_name"
               android:scaleType="centerCrop"
               android:background="@drawable/default_bg"
               android:id="@+id/listview_item_image">

    </ImageView>

    <ProgressBar android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_margin="3dp"
            android:id="@+id/listview_item_progressbar"
            android:layout_alignBottom="@id/listview_item_image"
            style="@android:style/Widget.ProgressBar.Horizontal">

    </ProgressBar>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:text="10%   10/100"
              android:layout_below="@id/listview_item_image"
              android:id="@+id/listview_item_progressbar_label">
    </TextView>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:text="http://www.google.com/asdf.jpg"
              android:layout_below="@id/listview_item_progressbar_label"
              android:id="@+id/listview_item_url_label">
    </TextView>
</RelativeLayout>